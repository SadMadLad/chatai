<%= link_to chat, data: { turbo_frame: 'chat', chats_target: 'chatTab', id: dom_id(chat), action: 'click->chats#removeNotificationIcon' }, id: chat_tab_id(chat), class: "shadow border p-3 block" do %>
  <% if account.present? || chat.two_person? %>
    <%= account.full_name %>
  <% else %>
    <%= chat.accounts.length %>
  <% end %>

  <% if notification %>
    <i class="fas fa-exclamation"></i>
  <% end %>
<% end %>
