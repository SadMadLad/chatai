
<section class="container">
  <%= content_for :style do %>
    <%= ChatsHelper::ChatStyleBuilder.new(current_account).build %>
  <% end %>

  <% @chats.each do |chat| %>
    <%= link_to chat.chat_title, chat, class: random_bg_color, data: { turbo_frame: 'chat' } %>
  <% end %>

  <div data-controller="ai-chats">
    <%= turbo_frame_tag 'chat' %>
  </div>
</section>
