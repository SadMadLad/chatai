<h1 class="text-3xl font-black text-center mt-8 mb-6"><%= t '.page_heading' %></h1>

<div class="mb-8">
  <% if @comments.present? %>
    <section class="flex-center">
      <div class="flex flex-col gap-4 max-w-2xl">
        <%= render partial: 'comment', collection: @comments.order(created_at: :desc), locals: { has_like_button: false, depth: 0, display_only: true } %>
      </div>
    </section>
  <% else %>
    <h2 class="text-2xl font-bold text-center"><%= t '.no_comments' %></h2>
  <% end %>
</div>
