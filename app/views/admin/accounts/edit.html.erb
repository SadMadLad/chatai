<%= form_with model: @account, url: [:admin, @account], method: :patch do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
    <%= @account.errors.full_messages_for(:first_name) %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
    <%= @account.errors.full_messages_for(:last_name) %>
  </div>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
    <%= @account.errors.full_messages_for(:username) %>
  </div>

  <% if current_account.superadmin? %>
    <div>
      <%= form.label :role %>
      <%= form.select :role, Account.roles.map{ |k, v| [k.humanize, k] }, { selected: @account.role } %>
    </div>
  <% end %>

  <%= form.submit %>
<% end %>
