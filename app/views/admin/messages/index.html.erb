<div class="mx-8 my-6 flex justify-between items-center">
  <%= link_to t('.add_message'), %i[new admin message], class: 'px-4 py-2.5 bg-primary-500 hover:bg-secondary-500 text-white font-bold rounded-lg' %>
  <%== pagy_nav(@pagy) %>
</div>

<div class="w-full flex-center mb-8">
  <div class="w-full overflow-auto max-w-5xl mx-8 border rounded-xl">
    <table class="border-separate border-spacing-0 text-xs md:text-sm w-full rounded-xl overflow-hidden">
      <thead class="bg-gray-100">
        <tr>
          <%== table_cols(%w[content sender chat], class: 'py-2.5 text-center px-3') %>
        </tr>
      </thead>
      <tbody>
        <% @messages.each do |message| %>
          <tr class="even:bg-gray-50 odd:bg-white">
            <td class="text-center p-0.5 md:p-2 max-w-28 overflow-hidden overflow-ellipsis whitespace-nowrap"><%= message.content %></td>
            <td class="text-center p-0.5 md:p-2"><%= message.account.full_name %></td>
            <td class="text-center p-0.5 md:p-2"><%= message.chat.id %></td>
            <td class="text-center p-0.5 md:p-2"><%= message.created_at.strftime('%d %B, %Y') %></td>
            <td class="text-center p-0.5 md:p-2"><%= message.updated_at.strftime('%d %B, %Y') %></td>
            <td class="text-center p-0.5 md:p-2">
              <div
                class="relative min-w-fit"
                data-controller="dropdown"
                data-dropdown-other-toggle-classes-value=<%= %w[px-3 py-1.5].to_json %>
              >
                <button data-action="dropdown#toggle"><i class="fa-solid fa-ellipsis"></i></button>
                <div
                  class="absolute w-0 h-0 bg-white shadow z-[48] right-0 bottom-4 rounded-xl transition-all duration-100 overflow-hidden"
                  data-dropdown-target="dropdown"
                >
                  <div class="flex flex-row gap-1.5 text-left">
                    <%= link_to t('show'), [:admin, message] %>
                    <%= link_to t('edit'), [:edit, :admin, message] %>
                    <%= button_to t('delete'), [:admin, message], method: :delete %>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
