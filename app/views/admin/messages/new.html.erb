<%= form_with model: @message, url: [:admin, :messages] do |form| %>
  <div>
    <%= form.label :chat_id %>
    <%= form.collection_select :chat_id, @chats, :id, :id, { prompt: '' } %>
  </div>

  <div>
    <%= form.label :account_id %>
    <%= form.collection_select :account_id, @accounts, :id, :full_name, { prompt: '' } %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <%= form.submit %>
<% end %>
