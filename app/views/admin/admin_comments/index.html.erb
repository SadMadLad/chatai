<table class="table-auto text-sm">
  <thead class="bg-gray-100">
    <tr>
      <th>Body</th>
      <th>Commented By</th>
      <th>Model Name</th>
      <th>Model</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @admin_comments.each do |admin_comment| %>
      <tr class="border-b">
        <td><%= admin_comment.body %></td>
        <td><%= link_to admin_comment.commenter.full_name, [:admin, admin_comment.commenter] %></td>
        <td><%= admin_comment.admin_commentable_type %></td>
        <td><%= link_to admin_comment.admin_commentable.id, [:admin, admin_comment.admin_commentable] %></td>
        <td><%= admin_comment.created_at %></td>
        <td><%= admin_comment.updated_at %></td>
        <td><%= link_to 'Show', [:admin, admin_comment] %>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy) %>
