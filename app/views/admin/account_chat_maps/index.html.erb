<%= link_to 'Create New Chat', [:new, :admin, :chat] %>
<hr />

<table class="table-auto text-sm">
  <thead class="bg-gray-100">
    <tr>
      <th>Account</th>
      <th>Chat</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @account_chat_maps.each do |account_chat_map| %>
      <tr class="border-b">
        <td><%= account_chat_map.account.full_name %></td>
        <td><%= account_chat_map.chat.id %></td>
        <td><%= account_chat_map.created_at %></td>
        <td><%= account_chat_map.updated_at %></td>
        <td>
          <%= link_to 'Show', [:admin, account_chat_map] %>
          <%= button_to 'Delete', [:admin, account_chat_map], method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy) %>

